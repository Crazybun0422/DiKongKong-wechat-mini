.flp-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f3f4f6 0%, #ffffff 60%);
  color: #121212;
}

.flp-scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 56rpx 48rpx 120rpx;
}

.flp-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 48rpx;
}

.flp-header {
  display: flex;
  margin-top: 100rpx;
  justify-content: center;
  gap: 40rpx;
}

.flp-balance-value {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.flp-balance-number {
  font-size: 96rpx;
  font-weight: 600;
  color: #111111;
  line-height: 1;
}

.flp-balance-unit {
  font-size: 36rpx;
  color: #4b5563;
  font-weight: 500;
}

.flp-detail-entry {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
}

.flp-detail-entry-hover {
  opacity: 0.6;
}

.flp-detail-icon {
  width: 52rpx;
}

.flp-detail-text {
  font-size: 28rpx;
  color: #4b5563;
  letter-spacing: 4rpx;
}

.flp-benefits-card {
  width: 100%;
  max-width: 660rpx;
  background: rgba(255, 255, 255, 0.94);
  border-radius: 40rpx;
  padding: 24rpx 0;
  box-shadow: 0 18rpx 60rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(8rpx);
}

.flp-benefit-item {
  display: flex;
  align-items: center;
  padding: 32rpx 48rpx;
  gap: 24rpx;
}

.flp-benefit-item + .flp-benefit-item {
  border-top: 1px solid rgba(17, 24, 39, 0.04);
}

.flp-benefit-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
  min-width: 400rpx;
}

.flp-benefit-action {
  /* flex: 0 0 auto; */
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 60rpx;
}

.flp-benefit-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.flp-benefit-desc {
  font-size: 26rpx;
  color: #6b7280;
}

.flp-action-btn {
  margin-left: 32rpx;
  padding: 10rpx 32rpx;
  font-size: 24rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #000000 0%, #3a3939 100%);
  border-radius: 999rpx;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: auto;
  min-width: 0;
}

.flp-action-btn::after {
  display: none;
}

.flp-benefit-tag {
  font-size: 26rpx;
  color: #1f2937;
}

@media (max-width: 750rpx) {
  .flp-scroll {
    padding: 48rpx 32rpx 96rpx;
  }

  .flp-header {
    flex-direction: column;
    align-items: center;
    gap: 24rpx;
  }

  .flp-balance-value {
    justify-content: center;
  }
}
