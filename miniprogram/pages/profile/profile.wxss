.profile-page {
  position: relative;
  min-height: 100vh;
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  background: #f5f5f7;
}

.profile-scroll {
  padding: 48rpx 40rpx 220rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.profile-loading,
.profile-error {
  margin-top: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  color: rgba(15, 23, 42, 0.6);
  font-size: 28rpx;
}

.profile-retry-btn {
  padding: 0 40rpx;
  line-height: 64rpx;
  background: #1088f2;
  color: #fff;
  border-radius: 999rpx;
}

.profile-retry-btn::after {
  border: none;
}

.profile-content {
  display: flex;
  flex-direction: column;
  gap: 36rpx;
}

.profile-header-card {
  display: flex;
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  align-items: center;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #eceff3;
}

.profile-header-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.profile-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.profile-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #0f172a;
}

.profile-arrow {
  font-size: 40rpx;
  color: rgba(15, 23, 42, 0.4);
  line-height: 1;
}

.profile-code-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: rgba(15, 23, 42, 0.6);
}

.profile-code-label {
  color: rgba(15, 23, 42, 0.45);
}

.profile-code-value {
  color: #0f172a;
  font-weight: 500;
}

.profile-code-copy {
  font-size: 24rpx;
  color: #1088f2;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(16, 136, 242, 0.08);
}

.profile-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 10rpx 26rpx rgba(15, 23, 42, 0.06);
}

.profile-card-left {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.profile-card-title {
  font-size: 28rpx;
  color: rgba(15, 23, 42, 0.55);
}

.profile-card-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #0f172a;
}

.profile-card-arrow {
  font-size: 42rpx;
  color: rgba(15, 23, 42, 0.35);
}

.profile-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
}

.profile-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 24rpx;
}

.profile-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.profile-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 16rpx;
  border-radius: 24rpx;
  background: rgba(15, 23, 42, 0.02);
}

.profile-list-item-hover {
  background: rgba(16, 136, 242, 0.08);
}

.profile-list-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.profile-list-text {
  font-size: 28rpx;
  color: #0f172a;
}

.profile-list-tag {
  font-size: 22rpx;
  color: #1088f2;
  background: rgba(16, 136, 242, 0.12);
  padding: 4rpx 14rpx;
  border-radius: 999rpx;
}

.profile-list-arrow {
  font-size: 34rpx;
  color: rgba(15, 23, 42, 0.35);
}

.profile-footnote {
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.45);
  text-align: center;
}

.bottom-controls {
  position: fixed;
  left: 55%;
  bottom: 42rpx;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 0;
  z-index: 40;
}

.bottom-menu {
  flex: 0 0 420rpx;
  width: 420rpx;
  height: 120rpx;
  border-radius: 999rpx;
  margin-right: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 18rpx 36rpx rgba(0, 0, 0, 0.2);
}

.bottom-menu button.menu-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  background: transparent;
  padding: 0;
  color: #1d1d1f;
  font-size: 22rpx;
  row-gap: 8rpx;
}

.bottom-menu button.menu-btn:active {
  transform: scale(0.95);
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  filter: brightness(0) saturate(100%) invert(28%) sepia(12%) saturate(676%) hue-rotate(177deg) brightness(92%) contrast(90%);
}

.menu-label {
  font-size: 22rpx;
}

.menu-btn.is-active .menu-label {
  color: #1976ff;
  font-weight: 600;
}

.menu-btn.is-active .menu-icon {
  filter: brightness(0) saturate(100%) invert(26%) sepia(81%) saturate(2342%) hue-rotate(203deg) brightness(95%) contrast(92%);
}

.chat-fab {
  position: relative;
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20px;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 18rpx 34rpx rgba(0, 0, 0, 0.22);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chat-fab::after {
  border: none;
}

.chat-fab-icon {
  width: 64rpx;
  height: 64rpx;
  filter: brightness(0) saturate(100%) invert(28%) sepia(12%) saturate(676%) hue-rotate(177deg) brightness(92%) contrast(90%);
}

.chat-fab-hover {
  transform: scale(0.95);
}
