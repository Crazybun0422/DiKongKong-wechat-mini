.open-platform-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
}

.open-platform-scroll {
  flex: 1;
  padding: 32rpx 32rpx 40rpx;
  box-sizing: border-box;
}

.open-platform-loading,
.open-platform-error {
  margin-top: 120rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.open-platform-retry {
  margin-top: 24rpx;
  width: 220rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #1677ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.open-platform-content {
  font-size: 30rpx;
  color: #1f1f1f;
  line-height: 1.8;
}

.open-platform-content p {
  margin: 20rpx 0;
}

.open-platform-content h1,
.open-platform-content h2,
.open-platform-content h3,
.open-platform-content h4,
.open-platform-content h5,
.open-platform-content h6 {
  margin: 32rpx 0 20rpx;
  font-weight: 600;
}

.open-platform-content h1 { font-size: 44rpx; }
.open-platform-content h2 { font-size: 38rpx; }
.open-platform-content h3 { font-size: 34rpx; }
.open-platform-content h4 { font-size: 32rpx; }
.open-platform-content h5 { font-size: 30rpx; }
.open-platform-content h6 { font-size: 28rpx; }

.open-platform-content .op-checkbox {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  margin-left: 4rpx;
  border-radius: 8rpx;
  border: 2rpx solid #d9d9d9;
  font-size: 28rpx;
  color: #999;
}

.open-platform-content .op-checkbox.is-checked {
  color: #1677ff;
  border-color: #1677ff;
}

.open-platform-content ul,
.open-platform-content ol {
  padding-left: 48rpx;
  margin: 12rpx 0;
}

.open-platform-content li {
  margin-bottom: 8rpx;
}

.open-platform-content .op-table {
  width: 100%;
  overflow: hidden;
  border-radius: 16rpx;
  border: 2rpx solid #e5e6eb;
  margin: 24rpx 0;
}

.open-platform-content .op-table-head,
.open-platform-content .op-table-row {
  display: flex;
}

.open-platform-content .op-table-header-cell,
.open-platform-content .op-table-cell {
  flex: 1;
  padding: 20rpx 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
  border-right: 2rpx solid #f0f0f0;
  box-sizing: border-box;
}

.open-platform-content .op-table-row .op-table-cell:last-child,
.open-platform-content .op-table-head .op-table-header-cell:last-child {
  border-right: 0;
}

.open-platform-content .op-table-row:last-child .op-table-cell {
  border-bottom: 0;
}

.open-platform-content .op-table-head {
  background: #f5f7ff;
  font-weight: 600;
}

.open-platform-content .op-table-caption {
  padding: 12rpx 0;
  font-size: 26rpx;
  text-align: center;
  color: #888;
}

.open-platform-content .op-figure {
  margin: 24rpx 0;
  text-align: center;
}

.open-platform-content .op-figure image,
.open-platform-content .op-figure img {
  display: block;
  width: 100%;
  max-width: 100%;
  height: auto;
  margin: 32rpx 0;
  border-radius: 16rpx;
}

.open-platform-content .op-figcaption {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.open-platform-content .op-link {
  color: #1677ff;
  text-decoration: underline;
}


.open-platform-content .op-image-container {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.open-platform-content .op-image-container image,
.open-platform-content .op-image-container img {
  display: block;
  width: 100%;
  max-width: 100%;
  height: auto;
  margin: 32rpx 0;
  border-radius: 12rpx;
}

.open-platform-content image,
.open-platform-content img {
  display: block;
  width: 100%;
  max-width: 100%;
  height: auto;
  margin: 32rpx 0;
  border-radius: 12rpx;
}

.open-platform-content code {
  padding: 4rpx 8rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-family: Menlo, Monaco, Consolas, "Courier New", monospace;
  font-size: 26rpx;
}

.open-platform-content pre {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: auto;
}

.open-platform-content blockquote {
  margin: 20rpx 0;
  padding: 20rpx 24rpx;
  background: #f0f5ff;
  border-left: 8rpx solid #1677ff;
  color: #3b4a69;
}
