<view class="open-platform-page">
  <view class="open-platform-header">
    <text class="open-platform-title">{{title}}</text>
    <text wx:if="{{updatedAt}}" class="open-platform-updated">最后更新：{{updatedAt}}</text>
  </view>
  <scroll-view scroll-y="true" class="open-platform-scroll">
    <block wx:if="{{loading}}">
      <view class="open-platform-loading">加载中...</view>
    </block>
    <block wx:elif="{{error}}">
      <view class="open-platform-error">
        <text>{{error}}</text>
        <button class="open-platform-retry" bindtap="onRetryTap">重试</button>
      </view>
    </block>
    <block wx:else>
      <rich-text
        class="open-platform-content"
        nodes="{{contentNodes}}"
        space="nbsp"
        selectable="true"
        bindtap="onRichTextTap"
      />
    </block>
  </scroll-view>
</view>
