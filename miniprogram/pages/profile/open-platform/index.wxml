<view class="open-platform-page">
  <block wx:if="{{loading}}">
    <view class="status-box">加载中...</view>
  </block>
  <block wx:elif="{{error}}">
    <view class="status-box status-error">
      <text>{{error}}</text>
      <button class="retry-btn" bindtap="onRetryTap">重试</button>
    </view>
  </block>
  <block wx:else>
    <scroll-view scroll-y="true" class="content-scroll">
      <rich-text
        class="rich-text-content"
        nodes="{{htmlContent}}"
        space="nbsp"
      ></rich-text>
    </scroll-view>
  </block>
</view>
