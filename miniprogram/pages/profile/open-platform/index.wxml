<view class="open-platform-page">
  <block wx:if="{{webUrl}}">
    <web-view
      src="{{webUrl}}"
      class="open-platform-webview"
      binderror="onWebViewError"
    />
  </block>
  <block wx:else>
    <scroll-view scroll-y="true" class="open-platform-scroll">
      <block wx:if="{{loading}}">
        <view class="open-platform-loading">加载中...</view>
      </block>
      <block wx:elif="{{error}}">
        <view class="open-platform-error">
          <text>{{error}}</text>
          <button class="open-platform-retry" bindtap="onRetryTap">&#x91CD;&#x8BD5;</button>
        </view>
      </block>
      <block wx:else>
        <rich-text
          class="open-platform-content"
          nodes="{{contentNodes}}"
          space="nbsp"
          selectable="true"
          bindtap="onRichTextTap"
        />
      </block>
    </scroll-view>
  </block>
</view>
