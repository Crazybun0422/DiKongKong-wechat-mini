}

.profile-list-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.profile-list-tag {
  font-size: 22rpx;
  color: #000000;
  background: rgba(0, 0, 0, 0.12);
  padding: 4rpx 14rpx;
  border-radius: 999rpx;
}

.profile-footnote {
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.45);
  text-align: center;
  margin-top: 12rpx;
}
