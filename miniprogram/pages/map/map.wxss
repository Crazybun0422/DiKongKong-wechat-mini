.page {
  display: flex;
  flex-direction: column;
   height:100vh; 
  background: #e7eaef;
}

.map-wrap {
  position: relative;
  flex: 1;
  width: 100%;
}

.map-canvas {
  width: 100%;
  height:100vh;
}

.center-pin {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 15px;
  height: 15px;
  margin-left: -9px;
  margin-top: -18px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.9);
  border: 2px solid #ffffff;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.25);
  pointer-events: none;
  z-index: 20;
}

.center-pin::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 100%;
  width: 2px;
  height: 10px;
  margin-left: -1px;
  background: rgba(0, 0, 0, 0.9);
}

.preflight-overlay {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 200rpx);
  left: 16rpx;
  width: 460rpx;
  z-index: 30;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  pointer-events: none;
}
.preflight-card {
  position: relative;
  padding: 32rpx 36rpx 28rpx;
  color: #fff;
  background: transparent;
}

.preflight-card::before {
  content: "";
  position: absolute;
  inset: 0;
  right: -100rpx;              /* 涓夎寤朵几鐨勫搴?*/
  border-radius: 24rpx 0 0 24rpx;
  background: rgba(0, 0, 0, 0.35);
  /* box-shadow: 0 12rpx 30rpx rgba(0,0,0,0); */
  clip-path: polygon(
    0% 0%,
    78% 0%,
    100% 50%,
    78% 100%,
    0% 100%
  );
  z-index: -1;
}


.preflight-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.drone-picker-block {
  margin-bottom: 12rpx;
  pointer-events: auto;
}

.drone-description {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.drone-description-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.drone-description-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
}

.drone-picker-display {
  display: flex;
  align-items: center;
  column-gap: 12rpx;
  pointer-events: auto;
}

.drone-picker-display:active {
  background: rgba(255, 255, 255, 0.16);
}

.drone-picker-value {
  font-size: 26rpx;
  color: #fff;
  font-weight: 600;
}

.preflight-row {
  display: flex;
  align-items: center;
  column-gap: 10rpx;
  margin-bottom: 10rpx;
}

.preflight-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.preflight-value {
  font-size: 24rpx;
  font-weight: 600;
}

.preflight-value.tone-safe {
  color: #4cd964;
}

.preflight-value.tone-warn {
  color: #ffd270;
}

.preflight-value.tone-alert {
  color: #ff5e57;
}

.preflight-value.tone-neutral {
  color: #fff;
}

.preflight-extra {
  display: block;
  margin: -6rpx 0 24rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.72);
  line-height: 1.4;
}

.picker-underline {
  text-decoration: underline;
  text-underline-offset: 4rpx;
}

.drone-picker-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.25);
  z-index: 35;
}

.drone-picker-sheet {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 40;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx 34rpx 40rpx;
  box-shadow: 0 -8rpx 36rpx rgba(0, 0, 0, 0.18);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  pointer-events: auto;
}

.drone-picker-sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.drone-picker-sheet-header .drone-description {
  margin-bottom: 0;
}

.drone-picker-sheet-header .drone-description-title {
  color: #111;
}

.drone-picker-sheet-header .drone-description-subtitle {
  color: rgba(17, 17, 17, 0.7);
}

.drone-picker-confirm {
  font-size: 30rpx;
  color: #000000;
  font-weight: 600;
}

.drone-picker-sheet-list {
  max-height: 420rpx;
  flex: 1;
}

.drone-picker-option {
  padding: 22rpx 20rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.65);
  margin-bottom: 14rpx;
  background: rgba(0, 0, 0, 0.08);
  transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease;
}

.drone-picker-option:last-child {
  margin-bottom: 0;
}

.drone-picker-option.is-active {
  background: #000000;
  color: #fff;
  font-weight: 600;
  box-shadow: 0 12rpx 22rpx rgba(0, 0, 0, 0.24);
}

.status-hint {
  display: block;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.65);
}

.control-row {
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 闈犲乏 */
  gap: 18rpx;
}

.locate-wrapper {
  flex-shrink: 0;
}

.search-stack {
  flex: 1;
  position: relative;
  pointer-events: auto;
}

button.locate-circle {

display: inline-flex;          
flex: none;                   
box-sizing: border-box;
padding: 0;
margin: 0;
min-width: 0;
line-height: 72rpx;            
background: rgba(255,255,255,0.08);
border: 2rpx solid rgba(255,255,255,0.85);


width: 72rpx;
height: 72rpx;
border-radius: 50%;


align-items: center;
justify-content: center;

/* 鍔ㄦ晥 */
transition: transform .12s ease, background-color .12s ease, box-shadow .12s ease;
overflow: hidden;
pointer-events: auto;
}

button.locate-circle::after {
  border: 0; content: none; 
}

.locate-icon {
  width: 38rpx;
  height: 38rpx;
}

button.locate-hover {
  transform: scale(0.94);
  background: rgba(255,255,255,0.18);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,.18) inset, 0 6rpx 14rpx rgba(0,0,0,.10);
}

/* 鍙€夛細鎮诞瑙嗚锛堟ā鎷?hover锛岀Щ鍔ㄧ鐪嬩笉澶嚭鏉ワ紝鐣欑潃鏃犲锛?*/
button.locate-circle:hover {
  background: rgba(255,255,255,0.14);
}

.search-pill {
  flex: 1;
  display: flex;
  align-items: center;
  border: 2rpx solid rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  height: 72rpx;
  padding-left: 28rpx;
  background: rgba(0, 0, 0, 0.22);
  pointer-events: auto;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.22) inset;
}

.search-field {
  flex: 1;
  min-width: 0;
  border: none;
  background: transparent;
  color: #fff;
  font-size: 28rpx;
  line-height: 1;
  padding: 0;
}

.search-field::placeholder {
  color: rgba(255, 255, 255, 0.85);
}

button.search-btn {
  flex-shrink: 0;
  width: 70rpx;
  height: 70rpx;
  margin-left: 16rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.95);
  background: rgba(255, 255, 255, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: transform 0.12s ease, background-color 0.12s ease;
  pointer-events: auto;
}

button.search-btn::after {
  border: 0;
  content: none;
}

.search-btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.search-btn-hover {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.18);
}

.search-suggest-panel {
  position: absolute;
  left: 0;
  right: 0;
  top: calc(100% + 12rpx);
  border-radius: 24rpx;
  background: rgba(12, 21, 33, 0.92);
  box-shadow: 0 18rpx 32rpx rgba(0, 0, 0, 0.35);
  padding: 8rpx;
  z-index: 12;
}

.search-suggest-scroll {
  max-height: 320rpx;
  overflow: auto;
}

.search-suggest-item {
  padding: 14rpx 20rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  color: #fff;
}

.search-suggest-item + .search-suggest-item {
  margin-top: 6rpx;
}

.search-suggest-item:active {
  background: rgba(255, 255, 255, 0.08);
}

.search-suggest-state {
  padding: 20rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.85);
  font-size: 24rpx;
}

.suggest-title {
  font-size: 26rpx;
  font-weight: 600;
}

.suggest-address {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.floating-controls {
    position: absolute;
    right: 32rpx;
    bottom: calc(env(safe-area-inset-bottom) + 262rpx);
    display: flex;
    flex-direction: column;
  gap: 28rpx;
  z-index: 40;
  pointer-events: none;
}

button.dashboard-toggle,
button.marker-button {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 16rpx 30rpx rgba(0, 0, 0, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
  pointer-events: auto;
  transition: transform 0.12s ease, box-shadow 0.12s ease;
}

button.dashboard-toggle::after,
button.marker-button::after,
.bottom-menu button::after {
  border: 0;
}

.dashboard-toggle-hover,
.marker-button-hover {
  transform: scale(0.94);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

.dashboard-toggle-icon,
.marker-button-icon,
.menu-icon,
.chat-fab-icon {
  width: 64rpx;
  height: 64rpx;
  transition: filter 0.2s ease, opacity 0.2s ease;
}

.dashboard-toggle-icon,
.marker-button-icon,
.menu-icon,
.chat-fab-icon {
  filter: brightness(0) saturate(100%);
}

.dashboard-toggle-icon,
.menu-icon,
.menu-label {
  opacity: 0.55;
}

.dashboard-toggle.is-active .dashboard-toggle-icon,
.menu-btn.is-active .menu-icon,
.menu-btn.is-active .menu-label {
  opacity: 1;
}

.dashboard-toggle.is-active .dashboard-toggle-icon {
  filter: brightness(0) saturate(100%);
}

.bottom-controls {
  position: absolute;
  left: 55%;
  bottom: calc(env(safe-area-inset-bottom) + 42rpx);
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 0rpx;
  z-index: 38;
}

.bottom-menu {
  flex: 0 0 420rpx;
  width: 220rpx;
  height: 120rpx;
  border-radius: 999rpx;
  margin-right: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 18rpx 36rpx rgba(0, 0, 0, 0.2);
}

.bottom-menu button.menu-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  background: transparent;
  padding: 0;
  color: #000000;
  font-size: 22rpx;
  row-gap: 8rpx;
}

.bottom-menu button.menu-btn:active {
  transform: scale(0.95);
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
}

.menu-label {
  font-size: 22rpx;
  transition: opacity 0.2s ease;
}

.menu-btn.is-active .menu-label {
  color: #000000;
  font-weight: 600;
  opacity: 1;
}

.menu-btn.is-active .menu-icon {
  filter: brightness(0) saturate(100%);
  opacity: 1;
}

.chat-fab {
  position: relative;
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20px;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 18rpx 34rpx rgba(0, 0, 0, 0.22);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  z-index: 39;
}

.chat-fab::after {
  border: 0;
}

.chat-fab-hover {
  transform: scale(0.94);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.25);
}

.chat-fab-icon {
  width: 52rpx;
  height: 52rpx;
}

.permission-mask {
  position: absolute;
  inset: 0;
  background: rgba(10, 14, 26, 0.52);
  z-index: 90;
}

.permission-panel {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  padding: 48rpx 44rpx 42rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.98);
  box-shadow: 0 32rpx 60rpx rgba(6, 13, 33, 0.2);
  display: flex;
  flex-direction: column;
  row-gap: 28rpx;
  z-index: 91;
}

.permission-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
}

.permission-subtitle {
  font-size: 26rpx;
  color: rgba(15, 23, 42, 0.72);
  line-height: 1.5;
}

.permission-list {
  display: flex;
  flex-direction: column;
  row-gap: 18rpx;
}

.permission-item {
  display: flex;
  align-items: flex-start;
  column-gap: 16rpx;
}

.permission-bullet {
  width: 14rpx;
  height: 14rpx;
  margin-top: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #000000 0%, #333333 100%);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.32);
  flex-shrink: 0;
}

.permission-text {
  flex: 1;
  font-size: 26rpx;
  color: rgba(15, 23, 42, 0.9);
  line-height: 1.6;
}

.permission-actions {
  display: flex;
  column-gap: 24rpx;
  margin-top: 6rpx;
}

.permission-button {
  flex: 1;
  height: 96rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.permission-button::after {
  border: none;
}

.permission-button--ghost {
  background: rgba(0, 0, 0, 0.48);
  color: #000000;
}

.permission-button--ghost-hover {
  background: rgba(0, 0, 0, 0.78);
}

.permission-button--solid {
  background: linear-gradient(135deg, #000000 0%, #333333 100%);
  color: #fff;
  box-shadow: 0 14rpx 28rpx rgba(0, 0, 0, 0.32);
}

.permission-button--solid-hover {
  transform: scale(0.97);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.26);
}

.permission-footnote {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.5);
  text-align: center;
}

.profile-fill-row {
  display: flex;
  align-items: center;
  column-gap: 24rpx;
  width: 100%;
}

.profile-avatar-slot {
  flex: 0.95;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-width: 0;
}

.profile-avatar-button {
  width: 120rpx;
