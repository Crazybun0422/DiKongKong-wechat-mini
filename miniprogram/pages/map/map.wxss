.page {
  display: flex;
  flex-direction: column;
   height:100vh; 
  background: #e7eaef;
}

.map-wrap {
  position: relative;
  flex: 1;
  width: 100%;
}

.map-canvas {
  width: 100%;
  height:100vh;
}

.center-pin {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 15px;
  height: 15px;
  margin-left: -9px;
  margin-top: -18px;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.9);
  border: 2px solid #ffffff;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.25);
  pointer-events: none;
  z-index: 20;
}

.center-pin::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 100%;
  width: 2px;
  height: 10px;
  margin-left: -1px;
  background: rgba(0, 122, 255, 0.9);
}

.preflight-overlay {
  position: absolute;
  top: 48rpx;
  left: 16rpx;
  width: 460rpx;
  z-index: 30;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  pointer-events: none;
}
.preflight-card {
  position: relative;
  padding: 32rpx 36rpx 28rpx;
  color: #fff;
  /* 透明，让真正的背景由 ::before 绘制 */
  background: transparent;
}

.preflight-card::before {
  content: "";
  position: absolute;
  inset: 0;
  right: -100rpx;              /* 三角延伸的宽度 */
  border-radius: 24rpx 0 0 24rpx;
  background: rgba(2, 2, 2, 0.35);
  /* box-shadow: 0 12rpx 30rpx rgba(0,0,0,0); */
  clip-path: polygon(
    0% 0%,
    78% 0%,
    100% 50%,
    78% 100%,
    0% 100%
  );
  z-index: -1;
}


.preflight-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.drone-picker-block {
  margin-bottom: 12rpx;
  pointer-events: auto;
}

.drone-description {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.drone-description-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.drone-description-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
}

.drone-picker-display {
  display: flex;
  align-items: center;
  column-gap: 12rpx;
  pointer-events: auto;
}

.drone-picker-display:active {
  background: rgba(255, 255, 255, 0.16);
}

.drone-picker-value {
  font-size: 26rpx;
  color: #fff;
  font-weight: 600;
}

.preflight-row {
  display: flex;
  align-items: center;
  column-gap: 10rpx;
  margin-bottom: 10rpx;
}

.preflight-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.preflight-value {
  font-size: 24rpx;
  font-weight: 600;
}

.preflight-value.tone-safe {
  color: #4cd964;
}

.preflight-value.tone-warn {
  color: #ffd270;
}

.preflight-value.tone-alert {
  color: #ff5e57;
}

.preflight-value.tone-neutral {
  color: #fff;
}

.preflight-extra {
  display: block;
  margin: -6rpx 0 24rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.72);
  line-height: 1.4;
}

.picker-underline {
  text-decoration: underline;
  text-underline-offset: 4rpx;
}

.drone-picker-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.25);
  z-index: 35;
}

.drone-picker-sheet {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 36;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx 34rpx 40rpx;
  box-shadow: 0 -8rpx 36rpx rgba(0, 0, 0, 0.18);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  pointer-events: auto;
}

.drone-picker-sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.drone-picker-sheet-header .drone-description {
  margin-bottom: 0;
}

.drone-picker-sheet-header .drone-description-title {
  color: #111;
}

.drone-picker-sheet-header .drone-description-subtitle {
  color: rgba(17, 17, 17, 0.7);
}

.drone-picker-confirm {
  font-size: 30rpx;
  color: #1e58ff;
  font-weight: 600;
}

.drone-picker-sheet-list {
  max-height: 420rpx;
  flex: 1;
}

.drone-picker-option {
  padding: 22rpx 20rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  color: #222;
  margin-bottom: 14rpx;
  background: rgba(17, 17, 17, 0.03);
}

.drone-picker-option:last-child {
  margin-bottom: 0;
}

.drone-picker-option.is-active {
  background: #1e58ff;
  color: #fff;
  font-weight: 600;
  box-shadow: 0 12rpx 22rpx rgba(30, 88, 255, 0.24);
}

.status-hint {
  display: block;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.65);
}

.control-row {
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 靠左 */
  gap: 18rpx;
}

.locate-wrapper {
  flex-shrink: 0;
}

.search-stack {
  flex: 1;
  position: relative;
  pointer-events: auto;
}

button.locate-circle {
/* 重置小程序 button 的默认行为 */
display: inline-flex;          /* 避免被 flex 拉伸 */
flex: none;                    /* 禁止伸缩 */
box-sizing: border-box;
padding: 0;
margin: 0;
min-width: 0;
line-height: 72rpx;            /* iOS 防基线撑高 */
background: rgba(255,255,255,0.08);
border: 2rpx solid rgba(255,255,255,0.85);

/* 正圆尺寸 */
width: 72rpx;
height: 72rpx;
border-radius: 50%;

/* 居中图标 */
align-items: center;
justify-content: center;

/* 动效 */
transition: transform .12s ease, background-color .12s ease, box-shadow .12s ease;
overflow: hidden;
pointer-events: auto;
}

button.locate-circle::after {
  border: 0; content: none; 
}

.locate-icon {
  width: 38rpx;
  height: 38rpx;
}

button.locate-hover {
  transform: scale(0.94);
  background: rgba(255,255,255,0.18);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,.18) inset, 0 6rpx 14rpx rgba(0,0,0,.10);
}

/* 可选：悬浮视觉（模拟 hover，移动端看不太出来，留着无害） */
button.locate-circle:hover {
  background: rgba(255,255,255,0.14);
}

.search-pill {
  flex: 1;
  display: flex;
  align-items: center;
  border: 2rpx solid rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  height: 72rpx;
  padding-left: 28rpx;
  background: rgba(0, 0, 0, 0.22);
  pointer-events: auto;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.22) inset;
}

.search-field {
  flex: 1;
  min-width: 0;
  border: none;
  background: transparent;
  color: #fff;
  font-size: 28rpx;
  line-height: 1;
  padding: 0;
}

.search-field::placeholder {
  color: rgba(255, 255, 255, 0.85);
}

button.search-btn {
  flex-shrink: 0;
  width: 70rpx;
  height: 70rpx;
  margin-left: 16rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.95);
  background: rgba(255, 255, 255, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: transform 0.12s ease, background-color 0.12s ease;
  pointer-events: auto;
}

button.search-btn::after {
  border: 0;
  content: none;
}

.search-btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.search-btn-hover {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.18);
}

.search-suggest-panel {
  position: absolute;
  left: 0;
  right: 0;
  top: calc(100% + 12rpx);
  border-radius: 24rpx;
  background: rgba(12, 21, 33, 0.92);
  box-shadow: 0 18rpx 32rpx rgba(0, 0, 0, 0.35);
  padding: 8rpx;
  z-index: 12;
}

.search-suggest-scroll {
  max-height: 320rpx;
  overflow: auto;
}

.search-suggest-item {
  padding: 14rpx 20rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  color: #fff;
}

.search-suggest-item + .search-suggest-item {
  margin-top: 6rpx;
}

.search-suggest-item:active {
  background: rgba(255, 255, 255, 0.08);
}

.search-suggest-state {
  padding: 20rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.85);
  font-size: 24rpx;
}

.suggest-title {
  font-size: 26rpx;
  font-weight: 600;
}

.suggest-address {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}
