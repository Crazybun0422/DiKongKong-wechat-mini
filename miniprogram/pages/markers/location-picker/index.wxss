.picker-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.picker-map {
  flex: 1;
  width: 100%;
}

.center-pin {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  pointer-events: none;
}

.pin-body {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #007aff;
  border: 4px solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
}

.pin-shadow {
  width: 28px;
  height: 8px;
  margin-top: 4px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.18);
  filter: blur(1px);
}

.address-bubble {
  position: absolute;
  top: 24px;
  left: 50%;
  transform: translateX(-50%);
  max-width: 78%;
  padding: 12px 16px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.78);
  color: #ffffff;
  box-sizing: border-box;
}

.address-main {
  font-size: 14px;
  font-weight: 600;
  line-height: 1.4;
}

.address-detail {
  margin-top: 4px;
  font-size: 12px;
  line-height: 1.5;
  opacity: 0.85;
}

.actions {
  padding: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 -12rpx 24rpx rgba(0, 0, 0, 0.08);
}

.error-text {
  margin-bottom: 16rpx;
  color: #ff3b30;
  font-size: 26rpx;
}

.confirm-btn {
  width: 100%;
  border-radius: 999rpx;
  font-size: 30rpx;
  background: #007aff;
  border: none;
}

.confirm-btn[disabled] {
  background: #c2d4ff;
  color: #ffffff;
}
