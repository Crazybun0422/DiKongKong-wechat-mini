.picker-page {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.picker-map-wrap {
  position: relative;
  flex: 1;
  width: 100%;
}

.picker-map {
  width: 100%;
  height: 100%;
}

.center-pin {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -95%);
  width: 64rpx;
  height: 64rpx;
  pointer-events: none;
  filter: brightness(0) saturate(100%) invert(27%) sepia(92%) saturate(2594%) hue-rotate(205deg) brightness(102%) contrast(104%) drop-shadow(0 10rpx 20rpx rgba(15, 23, 42, 0.25));
  opacity: 0.95;
  z-index:20;
}


.address-panel {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -260rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start; 
  pointer-events: none;
  min-width: 360rpx;
  max-width: 800rpx;
  gap: 0;
}

.address-panel-body {
  width: 100%;
  background: rgba(67, 68, 70, 0.9);
  border-radius: 28rpx;
  padding: 28rpx 32rpx 24rpx;
  box-sizing: border-box;
}

.address-panel-body .address-line {
  width: 100%;
  word-break: break-word;
  color: #111111;
  display: block;
  line-height: 1.5;
}

.address-line.primary {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 0.2rpx;
  margin-bottom: 6rpx;
  color: rgba(241, 234, 234, 0.82);
}

.address-line.secondary {
  font-size: 22rpx;
  color: rgba(241, 234, 234, 0.82);
}

.address-line.coordinate {
  font-size: 24rpx;
  font-weight: 500;
  color: #0284c7;
  letter-spacing: 0.6rpx;
  font-family: "DIN Alternate", "Helvetica Neue", Arial, sans-serif;
}

.picker-search-panel {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 32rpx);
  left: 32rpx;
  right: 32rpx;
  max-width: 620rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 60;
  pointer-events: none;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 0 28rpx;
  min-height: 92rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.96);
  box-shadow: 0 20rpx 46rpx rgba(15, 23, 42, 0.18);
  border: 1rpx solid rgba(148, 163, 184, 0.16);
  pointer-events: auto;
  transition: box-shadow 0.2s ease, transform 0.2s ease;
}

.search-box.is-active {
  box-shadow: 0 26rpx 52rpx rgba(15, 23, 42, 0.22);
  transform: translateY(-4rpx);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  min-width: 0;
  height: 92rpx;
  border: none;
  background: transparent;
  font-size: 30rpx;
  color: #111827;
}

.search-input::placeholder {
  color: #9ca3af;
}

.search-clear {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(15, 23, 42, 0.1);
  color: #111827;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
}

.search-suggest-card {
  pointer-events: auto;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  box-shadow: 0 26rpx 56rpx rgba(15, 23, 42, 0.18);
  border: 1rpx solid rgba(148, 163, 184, 0.12);
  overflow: hidden;
  max-height: 560rpx;
}

.search-suggest-loading,
.search-suggest-empty {
  padding: 28rpx 32rpx;
  font-size: 26rpx;
  color: #475569;
}

.search-suggest-scroll {
  max-height: 520rpx;
}

.search-suggest-item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.8);
  background: rgba(255, 255, 255, 0.96);
  transition: background 0.15s ease;
}

.search-suggest-item:active {
  background: rgba(241, 245, 249, 0.9);
}

.search-suggest-item:last-child {
  border-bottom: none;
}

.suggest-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.suggest-address {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #64748b;
}

.actions {
  padding: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 -12rpx 24rpx rgba(0, 0, 0, 0.08);
}

.error-text {
  margin-bottom: 16rpx;
  color: #ff3b30;
  font-size: 26rpx;
}

.confirm-btn {
  width: 100%;
  border-radius: 999rpx;
  font-size: 30rpx;
  background: #000000;
  border: none;
}

.confirm-btn[disabled] {
  background: #444444;
  color: #ffffff;
}
