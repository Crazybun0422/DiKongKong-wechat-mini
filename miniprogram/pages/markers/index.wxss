.markers-page {
  min-height: 100vh;
  background: #f5f7fb;
  display: flex;
  flex-direction: column;
}

.markers-scroll {
  flex: 1;
  padding: 24rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.title-area {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.page-subtitle {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.create-btn {
  background: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  line-height: 1;
}

.status-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.status-tab {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #edf1f7;
  color: #3c4859;
  font-size: 26rpx;
}

.status-tab.is-active {
  background: rgba(0, 122, 255, 0.12);
  color: #007aff;
  font-weight: 600;
}

.state-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 80rpx 32rpx;
  text-align: center;
  color: #6b7280;
  font-size: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
}

.state-card.state-error {
  color: #ef4444;
}

.retry-btn {
  margin-top: 24rpx;
  background: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
}

.empty-card {
  background: linear-gradient(180deg, #ffffff 0%, #f3f4f6 100%);
  border-radius: 28rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;        /* 一列排列 = 每个“占一行” */
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
  
}

.empty-icon {
  font-size: 68rpx;
}

.empty-title {
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.empty-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.empty-action {
  margin-top: 40rpx;
  background: linear-gradient(90deg, #007aff, #00a6f6);
  color: #fff;
  padding: 18rpx 42rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
}

.marker-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.marker-card {
  position: relative;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.08);
  overflow: hidden;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-top {
  display: flex;
  gap: 24rpx;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.marker-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.3;
}

.marker-location,
.marker-created {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
}

.marker-cover {
  width: 220rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background: #f3f4f6;
}

.card-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #111827;
  flex: 1;
}

.stat-icon {
  width: 40rpx;
  height: 40rpx;
}

.stat-value {
  font-weight: 600;
}

.card-divider {
  height: 1px;
  background: #edf0f5;
}

.card-actions {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #1f2937;
  padding: 12rpx 0;
}

.action-item + .action-item {
  border-left: 1px solid #edf0f5;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
}

.action-label {
  font-weight: 500;
}

.status-corner {
  position: absolute;
  top: 0;
  right: 0;
  width: 150rpx;
  height: 150rpx;
  clip-path: polygon(100% 0, 0 0, 100% 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.status-corner-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 600;
  transform: rotate(45deg);
  transform-origin: center;
  margin-right: -20rpx;
  margin-top: 20rpx;
  letter-spacing: 4rpx;
  pointer-events: none;
}

.status-corner.pending {
  background: #b8bcc5;
}

.status-corner.online {
  background: #9acd32;
}

.status-corner.danger {
  background: #ef4444;
}

.drawer-overlay {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.4);
  display: flex;
  justify-content: flex-end;
  z-index: 100;
}

.drawer {
  width: 100vw;
  /* max-width: 700rpx; */
  background: #ffffff;
  height: 95vh;
  display: flex;
  flex-direction: column;
  border-radius: 32rpx 32rpx 32rpx 32rpx;
  overflow: auto;
}

.drawer-header {
  padding: 36rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f2f7;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.drawer-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: #f1f5f9;
  color: #6b7280;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.drawer-body {
  flex: 1;
  padding: 24rpx 32rpx 160rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.drawer-footer {
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  border-top: 1px solid #f1f5f9;
  background: #ffffff;
}

.footer-btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.footer-btn.primary {
  background: linear-gradient(90deg, #007aff, #00a6f6);
  color: #fff;
}

.footer-btn.secondary {
  background: #e5e7eb;
  color: #374151;
}

.detail-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.05);
}

.detail-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.detail-item {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #4b5563;
}

.detail-label {
  color: #6b7280;
}

.detail-value {
  flex: 1;
  text-align: right;
  color: #1f2937;
}

.status-text.pending {
  color: #4b5563;
}

.status-text.online {
  color: #15803d;
}

.status-text.danger {
  color: #b91c1c;
}

.tag-display {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-chip {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(37, 99, 235, 0.12);
  color: #1d4ed8;
  font-size: 24rpx;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
}

.media-preview-grid {
  margin-top: 20rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.media-preview {
  width: 100%;
  height: 180rpx;
  border-radius: 18rpx;
  object-fit: cover;
}

.license-preview {
  width: 100%;
  height: 260rpx;
  border-radius: 24rpx;
  object-fit: cover;
  margin-top: 24rpx;
}

.attachment-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 16rpx;
}

.attachment-item {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}

.attachment-icon {
  margin-right: 12rpx;
}

.attachment-name {
  flex: 1;
  color: #1f2937;
}

.danger-btn {
  width: 100%;
  margin: 32rpx 0;
  background: #fee2e2;
  color: #b91c1c;
  font-size: 30rpx;
  border-radius: 16rpx;
  padding: 22rpx 0;
}

.step-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.step-item-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  min-width: 120rpx;
  flex-shrink: 0;
  padding: 0 12rpx;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.step-item.is-current {
  transform: scale(1.04);
}

.step-item.is-current .step-label {
  color: #0f172a;
  font-weight: 600;
}

.step-item.is-finished .step-label {
  color: #047857;
}

.step-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #dbe2ee;
  color: #475569;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.step-circle.is-active {
  background: linear-gradient(120deg, #007aff, #00a6f6);
  color: #fff;
  font-weight: 600;
}

.step-circle.is-finished {
  background: rgba(16, 185, 129, 0.18);
  color: #047857;
}

.step-label {
  font-size: 24rpx;
  color: #64748b;
  text-align: center;
}

.step-connector {
  flex: 1;
  height: 4rpx;
  background: #dbe2ee;
  border-radius: 2rpx;
  margin: 0 12rpx 0 8rpx;
}

.step-connector.is-active {
  background: linear-gradient(120deg, #007aff, #00a6f6);
}

.form-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.section-title.required {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.form-item {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 26rpx;
  color: #4b5563;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.required-indicator {
  color: #ef4444;
  font-size: 28rpx;
  line-height: 1;
}

.section-title.required .required-indicator {
  font-size: 32rpx;
}

.form-input {
  border-radius: 16rpx;
  border: 1px solid #e5e7eb;
  padding: 18rpx 24rpx;
  font-size: 28rpx;
  color: #111827;
  background: #f9fafb;
}

.form-textarea {
  border-radius: 16rpx;
  border: 1px solid #e5e7eb;
  padding: 18rpx 24rpx;
  font-size: 28rpx;
  color: #111827;
  background: #f9fafb;
  min-height: 180rpx;
}

.location-box {
  border-radius: 16rpx;
  border: 1px dashed #94a3b8;
  padding: 18rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8fafc;
}

.location-text {
  font-size: 28rpx;
  color: #1f2937;
}

.location-action {
  font-size: 26rpx;
  color: #007aff;
}

.tag-editor {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-remove {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.06);
  color: #374151;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}

.tag-input {
  min-width: 220rpx;
  padding: 16rpx 20rpx;
  border-radius: 14rpx;
  border: 1px dashed #cbd5f5;
  font-size: 26rpx;
  color: #111827;
  background: #f8fbff;
}

.tag-add {
  padding: 16rpx 24rpx;
  border-radius: 14rpx;
  background: rgba(0, 122, 255, 0.12);
  color: #007aff;
  font-size: 26rpx;
}

.admin-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.media-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.media-item {
  position: relative;
  width: 100%;
  padding-top: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  background: #f1f5f9;
}

.media-image {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.media-add {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1px dashed #94a3b8;
  border-radius: 20rpx;
  background: #f9fafb;
  padding: 32rpx 0;
}

.media-add-icon {
  font-size: 40rpx;
  color: #007aff;
}

.media-add-text {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #475569;
}

.media-remove {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(17, 24, 39, 0.6);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.helper-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 24rpx;
}

.plan-card {
  border-radius: 24rpx;
  padding: 28rpx;
  border: 1px solid #e2e8f0;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plan-card.is-selected {
  border-color: #007aff;
  background: rgba(0, 122, 255, 0.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.15);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.plan-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.plan-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #007aff;
}

.plan-desc {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.4;
}

.plan-status {
  font-size: 24rpx;
  color: #2563eb;
}

.summary-card {
  margin-top: 24rpx;
  border-radius: 20rpx;
  background: #f8fafc;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  font-size: 26rpx;
  color: #1f2937;
}

.error-box {
  margin-top: 24rpx;
  background: rgba(248, 113, 113, 0.15);
  color: #b91c1c;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
}

.result-card {
  margin: 48rpx auto;
  text-align: center;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 80rpx 32rpx;
  box-shadow: 0 14rpx 36rpx rgba(15, 23, 42, 0.1);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-card.error {
  background: #fff7f7;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.result-icon.success {
  background: rgba(16, 185, 129, 0.12);
  color: #047857;
}

.result-icon.error {
  background: rgba(248, 113, 113, 0.18);
  color: #b91c1c;
}

.result-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.result-desc {
  font-size: 26rpx;
  color: #4b5563;
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: #1f2937;
}

.result-btn {
  margin-top: 24rpx;
  background: linear-gradient(90deg, #007aff, #00a6f6);
  color: #fff;
  border-radius: 999rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.detail-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: #2563eb;
  word-break: break-all;
}

.detail-link {
  text-decoration: underline;
}
