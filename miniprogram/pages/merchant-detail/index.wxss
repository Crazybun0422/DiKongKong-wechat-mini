.merchant-detail-page {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fb 0%, #ffffff 100%);
  color: #1f2329;
}

.merchant-detail-status {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  color: #475569;
  font-size: 30rpx;
}

.merchant-detail-status-text {
  text-align: center;
  line-height: 1.6;
  max-width: 560rpx;
}

.merchant-detail-retry {
  padding: 18rpx 48rpx;
  border-radius: 999rpx;
  border: none;
  background: #2d68ec;
  color: #ffffff;
  font-size: 28rpx;
}

.merchant-detail-retry::after {
  border: none;
}

.marker-page-scroll {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}

.marker-page-hero {
  position: relative;
  width: 100%;
  height: 520rpx;
  background: #111827;
}

.marker-page-swiper {
  width: 100%;
  height: 100%;
}

.marker-page-swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.marker-page-swiper-dots {
  position: absolute;
  left: 50%;
  bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  transform: translateX(-50%);
}

.marker-page-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  transition: background 120ms ease;
}

.marker-page-swiper-dot.is-active {
  background: #ffffff;
}

.marker-page-hero-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e2e8f0;
}

.marker-page-hero-placeholder-text {
  font-size: 26rpx;
  color: #64748b;
}

.marker-page-body {
  position: relative;
  margin-top: -80rpx;
  background: #ffffff;
  border-radius: 48rpx 48rpx 0 0;
  padding: 64rpx 48rpx calc(160rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -24rpx 60rpx rgba(15, 23, 42, 0.08);
  min-height: calc(100vh - 440rpx);
  box-sizing: border-box;
}

.marker-page-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.marker-page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f2329;
  line-height: 1.3;
  word-break: break-word;
}

.marker-page-honors {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.marker-page-honor-chip {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(45, 104, 236, 0.08);
  color: #2d68ec;
  font-size: 24rpx;
}

.marker-page-address {
  margin-top: 36rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 28rpx;
}

.marker-page-address-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.marker-page-address-label {
  font-size: 24rpx;
  color: #2d68ec;
  font-weight: 500;
}

.marker-page-address-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.5;
  word-break: break-all;
}

.marker-page-action-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.marker-page-action-icon:active {
  background: #e2e8f0;
}

.marker-page-action-image {
  width: 48rpx;
  height: 48rpx;
}

.marker-page-section {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.marker-page-section-title {
  font-size: 28rpx;
  color: #2d68ec;
  font-weight: 600;
}

.marker-page-section-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
  white-space: pre-line;
}

.marker-page-section-text--placeholder {
  color: #94a3b8;
}

.marker-page-link-list {
  display: flex;
  flex-direction: column;
  border-radius: 32rpx;
  overflow: hidden;
  background: rgba(148, 163, 184, 0.12);
}

.marker-page-link-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  column-gap: 32rpx;
  background: transparent;
  transition: background 160ms ease;
}

.marker-page-link-item + .marker-page-link-item {
  border-top: 1px solid rgba(148, 163, 184, 0.18);
}

.marker-page-link-item:active {
  background: rgba(148, 163, 184, 0.18);
}

.marker-page-link-item--video {
  margin-top: 32rpx;
  border-radius: 32rpx;
  background: rgba(148, 163, 184, 0.12);
}

.marker-page-link-item--video + .marker-page-link-item--video {
  border-top: none;
}

.marker-page-link-info {
  display: flex;
  align-items: center;
  column-gap: 18rpx;
}

.marker-page-link-icon {
  width: 44rpx;
  height: 44rpx;
}

.marker-page-link-text {
  font-size: 28rpx;
  color: #1f2937;
  max-width: 440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.marker-page-link-arrow {
  font-size: 36rpx;
  color: rgba(15, 23, 42, 0.35);
  font-weight: 500;
}

.marker-page-qrcode-wrapper {
  margin-top: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.marker-page-qrcode {
  width: 320rpx;
  height: 320rpx;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.marker-page-share {
  position: fixed;
  left: 48rpx;
  bottom: calc(72rpx + env(safe-area-inset-bottom));
  z-index: 3;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 18rpx 32rpx;
  background: #ffffff;
  border-radius: 999rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.12);
  font-size: 26rpx;
  color: #1f2329;
  border: none;
  line-height: 1;
}

.marker-page-share::after {
  border: none;
}

.marker-page-share-icon {
  width: 40rpx;
  height: 40rpx;
}

.marker-page-share-text {
  color: inherit;
}

.marker-page-close-hint {
  position: fixed;
  right: 48rpx;
  bottom: calc(72rpx + env(safe-area-inset-bottom));
  z-index: 3;
  padding: 18rpx 32rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.72);
  color: #ffffff;
  font-size: 24rpx;
  line-height: 1;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.18);
  pointer-events: none;
}
