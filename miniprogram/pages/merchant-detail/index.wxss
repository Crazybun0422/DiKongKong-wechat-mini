.merchant-detail-page {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fb 0%, #ffffff 100%);
  color: #1f2329;
  overflow: hidden;
}

.merchant-detail-page--entering {
  animation: detail-page-slide-in 260ms cubic-bezier(0.33, 1, 0.68, 1) both;
}

.merchant-detail-page--closing {
  animation: detail-page-slide-out 220ms cubic-bezier(0.33, 1, 0.68, 1) both;
}

.merchant-detail-status {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  color: #475569;
  font-size: 30rpx;
}

.merchant-detail-status-text {
  text-align: center;
  line-height: 1.6;
  max-width: 560rpx;
}

.merchant-detail-retry {
  padding: 18rpx 48rpx;
  border-radius: 999rpx;
  border: none;
  background: #2d68ec;
  color: #ffffff;
  font-size: 28rpx;
}

.merchant-detail-retry::after {
  border: none;
}

.marker-page-scroll {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}

.marker-page-hero {
  position: relative;
  width: 100%;
  height: 520rpx;
  background: #111827;
}

.marker-page-swiper {
  width: 100%;
  height: 100%;
}

.marker-page-swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.marker-page-swiper-dots {
  position: absolute;
  left: 50%;
  bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  transform: translateX(-50%);
}

.marker-page-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  transition: background 120ms ease;
}

.marker-page-swiper-dot.is-active {
  background: #ffffff;
}

.marker-page-hero-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e2e8f0;
}

.marker-page-hero-placeholder-text {
  font-size: 26rpx;
  color: #64748b;
}

.marker-page-body {
  position: relative;
  margin-top: -80rpx;
  background: #ffffff;
  border-radius: 48rpx 48rpx 0 0;
  padding: 64rpx 48rpx calc(160rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -24rpx 60rpx rgba(15, 23, 42, 0.08);
  min-height: calc(100vh - 440rpx);
  box-sizing: border-box;
}

.marker-page-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.marker-page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f2329;
  line-height: 1.3;
  word-break: break-word;
}

.marker-page-honors {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.marker-page-honor-chip {
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f9d976, #f39c12);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 12rpx rgba(243, 156, 18, 0.25);
}

.marker-page-address {
  margin-top: 36rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.marker-page-address-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.marker-page-address-label {
  font-size: 24rpx;
  color: #2d68ec;
  font-weight: 500;
}

.marker-page-address-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.5;
  word-break: break-all;
}

.marker-page-address-actions {
  display: flex;
  align-items: stretch;
  gap: 20rpx;
}

.marker-page-action {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 18rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(45, 104, 236, 0.08);
  border: 1px solid rgba(45, 104, 236, 0.18);
}

.marker-page-action-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.marker-page-action-image {
  width: 32rpx;
  height: 32rpx;
}

.marker-page-action-label {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

.marker-page-section {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.marker-page-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.marker-page-section-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
}

.marker-page-section-text--placeholder {
  color: #94a3b8;
}

.marker-page-link-list {
  display: flex;
  flex-direction: column;
  border-radius: 32rpx;
  overflow: hidden;
  background: rgba(148, 163, 184, 0.12);
}

.marker-page-link-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  column-gap: 32rpx;
  background: transparent;
  transition: background 160ms ease;
}

.marker-page-link-item + .marker-page-link-item {
  border-top: 1px solid rgba(148, 163, 184, 0.18);
}

.marker-page-link-item:active {
  background: rgba(148, 163, 184, 0.18);
}

.marker-page-link-item--video {
  margin-top: 32rpx;
  border-radius: 32rpx;
  background: rgba(148, 163, 184, 0.12);
}

.marker-page-link-item--video + .marker-page-link-item--video {
  border-top: none;
}

.marker-page-link-info {
  display: flex;
  align-items: center;
  column-gap: 18rpx;
}

.marker-page-link-info--video {
  flex: 1;
  column-gap: 12rpx;
  justify-content: space-between;
}

.marker-page-link-icon {
  width: 44rpx;
  height: 44rpx;
}

.marker-page-link-icon--right {
  margin-left: auto;
}

.marker-page-link-text {
  font-size: 28rpx;
  color: #1f2937;
  max-width: 440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.marker-page-link-arrow {
  font-size: 36rpx;
  color: rgba(15, 23, 42, 0.35);
  font-weight: 500;
}

.marker-page-qrcode-wrapper {
  margin-top: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.marker-page-qrcode {
  width: 320rpx;
  height: 320rpx;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.marker-page-share {
  position: fixed;
  left: 48rpx;
  bottom: calc(72rpx + env(safe-area-inset-bottom));
  z-index: 3;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 18rpx 32rpx;
  background: #ffffff;
  border-radius: 999rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.12);
  font-size: 26rpx;
  color: #1f2329;
  border: none;
  line-height: 1;
}

.marker-page-share::after {
  border: none;
}

.marker-page-share-icon {
  width: 40rpx;
  height: 40rpx;
}

.marker-page-share-text {
  color: inherit;
}

.marker-page-share--disabled {
  background: rgba(148, 163, 184, 0.22);
  color: #94a3b8;
}

.marker-page-share--disabled::after {
  border: none;
}

.marker-page-share--disabled .marker-page-share-icon {
  filter: grayscale(1);
  opacity: 0.6;
}

.marker-page-close-hint {
  position: fixed;
  left: 50%;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  z-index: 3;
  padding: 0;
  background: transparent;
  color: #94a3b8;
  font-size: 32rpx;
  line-height: 1.4;
  text-align: center;
  transform: translateX(-50%);
  box-shadow: none;
  border-radius: 0;
  pointer-events: none;
}

.call-sheet-mask {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.45);
  z-index: 120;
}

.call-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 48rpx;
  background: #ffffff;
  border-radius: 48rpx 48rpx 0 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 32rpx;
  z-index: 121;
  box-shadow: 0 -20rpx 60rpx rgba(15, 23, 42, 0.12);
}

.call-sheet-message {
  font-size: 28rpx;
  color: #334155;
  line-height: 1.6;
  text-align: center;
}

.call-sheet-button {
  width: 100%;
  height: 96rpx;
  border-radius: 999rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.call-sheet-button::after {
  display: none;
}

.call-sheet-button--primary {
  background: #2563eb;
  color: #ffffff;
}

.call-sheet-button--secondary {
  background: #f1f5f9;
  color: #0f172a;
}

@keyframes detail-page-slide-in {
  0% {
    transform: translate3d(0, 100%, 0);
  }

  100% {
    transform: translate3d(0, 0, 0);
  }
}

@keyframes detail-page-slide-out {
  0% {
    transform: translate3d(0, 0, 0);
  }

  100% {
    transform: translate3d(0, 100%, 0);
  }
}

@keyframes marker-detail-fade-in {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

@keyframes marker-detail-fade-out {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}
